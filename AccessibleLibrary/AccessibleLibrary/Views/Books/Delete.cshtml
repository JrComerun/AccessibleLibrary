
@{
    ViewData["Title"] = "Delete ?";
}

<section id="SmallPage">
    <div class="container">
        <div class="row justify-content-center">
            <div class=" col-md-12 d-flex  justify-content-center">
                <div class="email-approve d-flex  justify-content-around align-items-center w-100">
                    <div class="approve-img">
                        @if (ViewBag.Active)
                        {
                            <img class="img-fluid" style="object-fit:cover"
                                 src="~/src/img/components/delete.png"
                                 alt="" />
                        }
                        else
                        {
                            <img class="img-fluid" style="object-fit:cover"
                                 src="~/src/img/components/deactive.png"
                                 alt="" />
                        }

                    </div>
                    <div class="approve d-flex align-items-center flex-column">
                        <div class="approve-head">
                            @if (ViewBag.Active)
                            {
                                <h3> Deactive etmə</h3>
                            }
                            else
                            {
                                <h3> Activ etmə</h3>
                            }
                        </div>
                        @if (ViewBag.Active)
                        {
                            <div class="approve-body">
                                DeActive etmə istədiyinizə əminsinizmi ?
                            </div>

                        }
                        else
                        {
                            <div class="approve-body">
                                Active etmə istədiyinizə əminsinizmi ?
                            </div>
                        }

                        <div class="d-flex align-items-center">

                            <div class="approve-footer mr-3">
                                <form method="post" id="delete-book">
                                    <button type="submit">Bəli</button>
                                </form>
                            </div>
                            <div class="approve-footer">
                                <a asp-controller="Home" asp-action="Index">
                                    Ana Səhifə
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Css{
    <link rel="stylesheet" href="~/src/css/secondary.css" />
}

