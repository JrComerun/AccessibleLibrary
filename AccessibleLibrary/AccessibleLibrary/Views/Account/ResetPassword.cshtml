@model ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="login-html">
    <div class="login-register-bod">
        <div class="log-part-modal content">
            <div class="body">
                <form asp-controller="Account" asp-action="ResetPassword">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Password">Yeni Parol</label>
                        <input asp-for="Password" class="form-control" />
                        <span class="text-danger"
                              asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CheckPassword">Yeni Parolun Təkrarı</label>
                        <input asp-for="CheckPassword" class="form-control" />
                        <span class="text-danger"
                              asp-validation-for="CheckPassword"></span>
                    </div>
                    <button type="submit" class="btn btn-success mt-5">Parolu Dəyiş</button>
                </form>
                <div class="reg-forgot">
                    <a asp-controller="Account" asp-action="Register">
                        Qeydiyyatdan Keç
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Css{
    <link rel="stylesheet" href="~/src/css/secondary.css" />
}

