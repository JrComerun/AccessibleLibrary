
@{
    ViewData["Title"] = "EmailVerification";
}

<section id="SmallPage">
    <div class="container">
        <div class="row justify-content-center">
            <div class=" col-md-12 d-flex  justify-content-center">
                <div class="email-approve d-flex  justify-content-center align-items-center">
                    <div class="approve-img">
                        <img class="img-fluid"
                             src="~/src/img/layout/email1.png"
                             alt="" />
                    </div>
                    <div class="approve d-flex align-items-center flex-column">
                        <div class="approve-head">
                            <h3>Təbriklər</h3>
                        </div>
                        <div class="approve-body">
                            <span>@ViewBag.Email</span> Email-iylə  Qeydiyatdan keçdiniz artıq <span>Əlçatan Kitabxanadan</span> tam istifadə edə  bilərsiz
                        </div>
                        <div class="approve-footer">
                            <a asp-controller="Home" asp-action="Index">
                                Ana Səhifə
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Css{
    <link rel="stylesheet" href="~/src/css/secondary.css" />
}