@model EmailForResetPVM
@{
    ViewData["Title"] = "EmailForResetPassword";
}

<div class="login-html">
    <div class="login-register-bod">
        <div class="log-part-modal content">
            <div class="body">
                <form method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Email">Parol Təkrarı üçün hesab Emailini daxil edin</label>
                        <input asp-for="Email" class="form-control" />
                        <span class="text-danger"
                              asp-validation-for="Email"></span>
                    </div>
                    <button type="submit" class="btn btn-success mt-5">Göndər</button>
                </form>
                <div class="reg-forgot">
                    <a asp-controller="Account" asp-action="Register">
                        Qeydiyyatdan Keç
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Css{
    <link rel="stylesheet" href="~/src/css/secondary.css" />
}


