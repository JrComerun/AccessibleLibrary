
@{
    Layout = null;
}

<div class="components">
    <!-- ---------------------------------------------------------- -->
    @await Component.InvokeAsync("LoginReg")
    <!-- *-*-*-*-*-*-*-*-*      PreLoader Start      *-*-*-*-*-*-*-*-* -->
    <div class="overlay">
        <div class="preloader">
            <div class="diamond">
                <span></span>
                <span></span>
                <span></span>
            </div>
            <div class="movement">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
        <div id="Pre-JrC">Accessible Library by JrC</div>
    </div>
    <!-- *-*-*-*-*-*-*-*-*      PreLoader End      *-*-*-*-*-*-*-*-* -->
    <!-- ---------------------------------------------------------- -->
    <!-- *-*-*-*-*-*-*-*-*  Mobile Navigation On Button Start      *-*-*-*-*-*-*-*-* -->
    <div id="nav-mobile-1">
        <div class="nav-close-btn d-flex justify-content-end">
            <a class="close-btn" id="Nav-close-btn"><i class="fas fa-times-circle"></i></a>
        </div>
        <div class="languages-bar d-flex align-items-center justify-content-center">
            <div class="lang d-flex" id="aze-lang2">
                <img width="20" height="20" src="~/src/img/logo/azerbaijan.png" alt="" /> <span>AZE</span>
            </div>
            <div class="lang d-flex" id="eng-lang2">
                <img width="20" height="20" src="~/src/img/logo/united-kingdom.png" alt="" />
                <span>ENG</span>
            </div>
            <div class="lang d-flex" id="rus-lang2">
                <img width="20" height="20" src="~/src/img/logo/russia.png" alt="" /> <span>RUS</span>
            </div>
        </div>
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="login d-flex justify-content-around align-items-center">
                <a data-toggle="modal" data-target="#Login-Reg">
                    <div class="nav-link2">Giriş</div>
                </a>
                <a data-toggle="modal" data-target="#Login-Reg">
                    <div class="nav-link2">Qeydiyyat</div>
                </a>
            </div>
        }
        else
        {
            <div class="login d-flex justify-content-around align-items-center">
                <a data-toggle="modal" data-target="#Login-Reg">
                    <div class="nav-link2">@User.Identity.Name</div>
                </a>
                <a asp-controller="Account" asp-action="Logout">
                    <div class="nav-link2">Çıxış</div>
                </a>
            </div>
        }

        <div class="navigation">
            <a asp-controller="Home" asp-action="Index">
                <div class="nav-link2">Əsas Səhifə</div>
            </a>
            <a asp-controller="Books" asp-action="Index">
                <div class="nav-link2">Kitablar</div>
            </a>
            <a asp-controller="Books" asp-action="Filter">
                <div class="nav-link2">Ətraflı Axtar</div>
            </a>
            <a asp-controller="About" asp-action="Index">
                <div class="nav-link2">Haqqımızda</div>
            </a>
            <a asp-controller="Contact" asp-action="Index">
                <div class="nav-link2">Bizimlə Əlaqə</div>
            </a>
        </div>
        <div class="nav-text">
            <div class="text">
                Kitab almaq istəyirsiniz? Artıq köhnə kitabınızı satıb yenisini ala bilərsiniz!!!
            </div>
        </div>
        <div class="icons-soc mt-3">
            <ul class="menu">
                <li>
                    <a href="#0">
                        <span>FaceBook</span>
                        <span>
                            <i class="fab fa-facebook-square" aria-hidden="true"></i>
                        </span>
                    </a>
                </li>
                <li>
                    <a href="#0">
                        <span>Twitter</span>
                        <span>
                            <i class="fab fa-twitter-square" aria-hidden="true"></i>
                        </span>
                    </a>
                </li>
                <li>
                    <a href="#0">
                        <span>Instagram</span>
                        <span>
                            <i class="fab fa-instagram-square" aria-hidden="true"></i>
                        </span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <!-- *-*-*-*-*-*-*-*-*  Mobile Navigation On Button End      *-*-*-*-*-*-*-*-* -->
    <!-- ---------------------------------------------------------- -->
    <!-- *-*-*-*-*-*-*-*-*  Mobile Navigation On Scrool Start      *-*-*-*-*-*-*-*-* -->
    <div id="nav-mobile-2">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12 add-book">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="AddBook" asp-action="Index" class="add-book-btn">
                            ELAN YERLƏŞDİR !
                        </a>
                    }
                    else
                    {
                        <a href="" class="add-book-btn" data-toggle="modal" data-target="#Login-Reg" onclick="SwitchToLog()">
                            ELAN YERLƏŞDİR !
                        </a>
                    }
                </div>
                <div class="col-lg-12 menu">
                    <div class="icons-menu">
                        <div class="small-menu">
                            <a asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home"></i>
                            </a>
                            <div class="word">Əsas Səhifə</div>
                        </div>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <div class="small-menu">
                                <a data-toggle="modal" data-target="#Login-Reg" onclick="SwitchToLog()">
                                    <i class="fas fa-bookmark"></i>
                                </a>
                                <div class="word">Seçilmişlər</div>
                            </div>
                            <div class="small-menu">
                                <a data-toggle="modal" data-target="#Login-Reg" onclick="SwitchToLog()">
                                    <i class="fas fa-envelope"></i>
                                </a>
                                <div class="word">Mesajlar</div>
                            </div>
                            <div class="small-menu">
                                <a data-toggle="modal" data-target="#Login-Reg" onclick="SwitchToLog()">
                                    <i class="fas fa-user"></i>
                                </a>
                                <div class="word">Şəxsi Hesab</div>
                            </div>
                        }
                        else
                        {
                            <div class="small-menu">
                                <a asp-controller="Profile" asp-action="Index" asp-route-username="@User.Identity.Name" asp-route-active="Bookmark">
                                    <i class="fas fa-bookmark"></i>
                                </a>
                                <div class="word">Seçilmişlər</div>
                            </div>
                            <div class="small-menu">
                                <a asp-controller="Profile" asp-action="Index" asp-route-username="@User.Identity.Name" asp-route-active="Messages">
                                    <i class="fas fa-envelope"></i>
                                </a>
                                <div class="word">Mesajlar</div>
                            </div>
                            <div class="small-menu">
                                <a asp-controller="Profile" asp-action="Index" asp-route-username="@User.Identity.Name" asp-route-active="Profile">
                                    <i class="fas fa-user"></i>
                                </a>
                                <div class="word">Şəxsi Hesab</div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- *-*-*-*-*-*-*-*-*  Mobile Navigation On Scrool End      *-*-*-*-*-*-*-*-* -->
    <!-- ---------------------------------------------------------- -->
    <!-- *-*-*-*-*-*-*-*-*  Mobile Category On Button Start      *-*-*-*-*-*-*-*-* -->
    <div id="cat-mobile">
        <div class="cat-close-btn d-flex justify-content-end">
            <a class="close-btn" id="Cat-close-btn"><i class="fas fa-times-circle"></i></a>
        </div>
        <div class="mob-categories">
            <a data-child="child-cat-mobile-1" class="open-child-cat">
                <div class="mob-category">
                    <img src="~/src/img/categories/roman.png" alt="" />
                    <div class="text">Əsər və Roman</div>
                </div>
            </a>
            <a class="open-child-cat">
                <div class="mob-category">
                    <img src="~/src/img/categories/studying.png" alt="" />
                    <div class="text">Dərslik</div>
                </div>
            </a>
            <a class="open-child-cat">
                <div class="mob-category">
                    <img src="~/src/img/categories/science.png" alt="" />
                    <div class="text">Elmi</div>
                </div>
            </a>
            <a class="open-child-cat">
                <div class="mob-category">
                    <img src="~/src/img/categories/biography.png" alt="" />
                    <div class="text">Həyat Hekayəsi</div>
                </div>
            </a>
            <a class="open-child-cat">
                <div class="mob-category">
                    <img src="~/src/img/categories/search.png" alt="" />
                    <div class="text">Bilgi və Araşdırma</div>
                </div>
            </a>
            <a class="open-child-cat">
                <div class="mob-category">
                    <img src="~/src/img/categories/lit.png" alt="" />
                    <div class="text">Ədəbiyyat Şeir</div>
                </div>
            </a>
            <a class="open-child-cat">
                <div class="mob-category">
                    <img src="~/src/img/categories/childBook.png" alt="" />
                    <div class="text">Uşaq Kitabları</div>
                </div>
            </a>
            <a class="open-child-cat">
                <div class="mob-category">
                    <img src="~/src/img/categories/journey.png" alt="" />
                    <div class="text">Dunya Səyahəti</div>
                </div>
            </a>
            <a>
                <div class="mob-category">
                    <img src="~/src/img/categories/other.png" alt="" />
                    <div class="text">Digər</div>
                </div>
            </a>
        </div>
    </div>
    <!-- *-*-*-*-*-*-*-*-*  Mobile Category On Button End      *-*-*-*-*-*-*-*-* -->
    <!-- ---------------------------------------------------------- -->
    <!-- *-*-*-*-*-*-*-*-*  Mobile Category On Button Start      *-*-*-*-*-*-*-*-* -->
    <div id="child-cat-mobile">
        <div class="child-cat-close-btn d-flex justify-content-end">
            <a class="close-btn" id="Child-cat-close-btn"><i class="fas fa-arrow-left"></i></a>
        </div>
        <div class="mob-categories">
            <a href="">
                <div class="mob-category">
                    <div class="text">Bütün Elanlar (1000)</div>
                </div>
            </a>
            <a>
                <div class="mob-category">
                    <div class="text">Fantastika (300)</div>
                </div>
            </a>
            <a>
                <div class="mob-category">
                    <div class="text">Xəyali Dunya (200)</div>
                </div>
            </a>
            <a>
                <div class="mob-category">
                    <div class="text">Qorxu (100)</div>
                </div>
            </a>
            <a>
                <div class="mob-category">
                    <div class="text">Bütün Elanlar (400)</div>
                </div>
            </a>
            <a>
                <div class="mob-category">
                    <div class="text">Digər (100)</div>
                </div>
            </a>
        </div>
    </div>
    <!-- *-*-*-*-*-*-*-*-*  Mobile Category On Button End      *-*-*-*-*-*-*-*-* -->
    <!-- ---------------------------------------------------------- -->


</div>

