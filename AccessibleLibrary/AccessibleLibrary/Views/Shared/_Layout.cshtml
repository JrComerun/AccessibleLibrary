    }
    else
    {
        <script>
            var userAuthorized = false;
        </script>

    }
    <script src="~/src/js/jquery/jquery.js"></script>
    <script src="~/src/js/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/src/js/bootstrap/bootstrap.min.js"></script>
    <script src="~/src/js/mobile.js"></script>
    <script src="~/src/js/main.js"></script>
    <script src="~/src/js/backend.js"></script>
    @RenderSection("Scripts", required: false)
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
