@model List<Book>
@{
    ViewData["Title"] = "Updates Book";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex justify-content-center mb-2 py-4 bg-dark font-weight-bold text-light">
                <h2 class="card-title pt-2 mb-0 mr-5 text-light" style="font-size:larger !important;">Yenilənmə üçün Təsdiqləmə gözluyən Kitablar </h2>

            </div>
            <div class="table-responsive bg-dark">
                <table class="table table-striped">
                    <thead>
                        <tr class="bg-dark font-weight-bold text-light">
                            <th>
                                Şəkil
                            </th>
                            <th>
                                Adı
                            </th>
                            <th>
                                Yaranma Vaxtı
                            </th>
                            <th>
                                Qiyməti
                            </th>

                            <th class="text-right">
                                Ayarlar
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Book b in Model)
                        {
                            <tr class="bg-dark font-weight-bold text-light">
                                <td>
                                    @foreach (BookImage img in b.BookImages.Where(i => i.IsMain == true))
                                    {
                                        <img src="~/src/img/books/@img.Image" class="img-fluid " style="width:80px !important;height:80px!important;object-fit: cover !important;" />
                                    }
                                </td>
                                <td style="text-transform:capitalize!important">@b.Name</td>
                                <td>@b.BookDetail.CreateTime.ToString("D")</td>
                                <td>@b.Price</td>

                                <td class="d-flex flex-column align-items-end">
                                    <a style="width:80px!important" asp-controller="UpdatesBook" asp-action="Delete" asp-route-id="@b.Id" class="btn btn-outline-success"><i class="mdi mdi-tooltip-edit"></i></a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
                <div class="row justify-content-center mt-3">
                    <nav class="d-flex ">
                        <ul class="pagination">
                            @for (int i = 1; i <= ViewBag.PageCount; i++)
                            {
                                if (i == ViewBag.Page)
                                {
                                    <li class="page-item active diabled"><a class="page-link">@i </a> </li>
                                }
                                else
                                {
                                    <li class="page-item"><a class="page-link" asp-controller="Course" asp-action="Index" asp-route-page="@i">@i</a></li>
                                }
                            }

                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

