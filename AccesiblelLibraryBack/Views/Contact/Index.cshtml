
@{
    ViewData["Title"] = "Contact";
}

<section class="contact-us">
    <div class="container">
        <h2 class="section-title">Bizimlə Əlaqə</h2>
        <hr class="divider" />
        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="contact-icon">
                        <img class="img-fluid"
                             src="~/src/img/layout/contact.jpg"
                             alt="" />
                    </div>
                </div>
            </div>
            <div class="col-md-4 form-item form-group d-flex align-items-center">
                <form>
                    <div class="col-12 form-item form-group">
                        <label>Ad :</label>
                        <input type="text" placeholder="Ad" />
                    </div>
                    <div class="col-12 form-item form-group">
                        <label>Email :</label>
                        <input type="text" placeholder="Email" />
                    </div>
                    <div class="col-12 form-item form-group">
                        <label>Başlıq :</label>
                        <input type="text" placeholder="Başlıq" />
                    </div>
                    <div class="col-12 form-item form-group">
                        <label>Mesaj yaz :</label>
                        <textarea id="" class="message-place" placeholder="Burada yaz..."></textarea>
                    </div>
                    <div class="col-12 select-btn-holder">
                        <button type="submit" class="select-btn">Göndər</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>


@section Css{
    <link rel="stylesheet" href="~/src/css/secondary.css" />
}