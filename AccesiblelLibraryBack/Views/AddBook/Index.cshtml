
@{
    ViewData["Title"] = "Index";
}

<section class="addbook">
    <div class="container">
        <h2 class="anouncement-title">Kitab haqqında</h2>
        <hr class="divider" />
        <form>
            <div class="row">
                <div class="col-md-6 form-item form-group">
                    <label>Kitabın adı :</label>
                    <input type="text" placeholder="Ad" />
                </div>
                <div class="col-md-6 form-item form-group">
                    <label>Kitabın müəllifi :</label>
                    <input type="text" placeholder="Müəllif" />
                </div>
                <div class="col-md-6 form-item form-group">
                    <label>Kitabın qiyməti (Azn) :</label>
                    <input type="number" min="0" placeholder="Qiymət" />
                </div>
                <div class="col-md-6 form-item form-group">
                    <label>Kitabın yazıldığı dil :</label>
                    <input type="text" placeholder="Dil" />
                </div>
                <div class="col-md-6 form-item">
                    <div class="select-form">
                        <label for="">Kateqori seç :</label>
                        <select class="sel-category">
                            <option selected>Bütun Kateqorilər</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-6 form-item">
                    <div class="select-form">
                        <label for="">Alt Kateqori seç :</label>
                        <select class="sel-child-category">
                            <option selected>Bütun Elanlar</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                </div>
                <div class="col-12 form-item">
                    <div class="col-12 p-0 d-flex align-items-center">
                        <label class="image-select-btn select-btn" for="image-select">Şəkil seç</label>
                        <span class="ml-3">Maks(4)</span>
                        <input type="file" class="image-select" id="image-select" accept="image/*" />
                    </div>
                    <div class="col-md-6">
                        <div class="selected-images"></div>
                    </div>
                </div>
                <div class="col-12">
                    <hr class="divider" />
                    <h5>Əlaqə məlumatları</h5>
                </div>
                <div class="col-md-6 form-item form-group">
                    <label>Adınız :</label>
                    <input type="text" placeholder="Ad" />
                </div>
                <div class="col-md-6 form-item form-group">
                    <label>Email :</label>
                    <input type="text" placeholder="Email" />
                </div>
                <div class="col-md-6 form-item form-group">
                    <label>Əlaqə nömrəsi :</label>
                    <input type="tel" placeholder="Mobil nömrə" />
                </div>
                <div class="col-md-6 form-item">
                    <div class="select-form">
                        <label for="">Şəhər seç :</label>
                        <select class="sel-child-category">
                            <option selected>Bütun Elanlar</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                    </div>
                </div>
            </div>

            <button type="submit" class="select-btn">Yerləşdir</button>
        </form>
    </div>
</section>

@section Css{
    <link rel="stylesheet" href="~/src/css/secondary.css" />
}
