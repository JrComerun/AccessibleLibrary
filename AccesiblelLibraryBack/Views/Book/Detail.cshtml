
@{
    ViewData["Title"] = "Detail";
}


<!-- *-*-*-*-*-*-*-*-*      Most Viewed Start      *-*-*-*-*-*-*-*-* -->
<section id="Book-Detail">
    <div class="container pb-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-8">
                <div class="book">
                    <div class="book-images">
                        <img src="~/src/img/bookDetails/book-1-1.jpg" id="main" />
                        <div id="thumbnails">
                            <img class="book-detail-img" src="~/src/img/bookDetails/book-1-1.jpg" />
                            <img class="book-detail-img" src="~/src/img/bookDetails/book-1-2.jpg" />
                        </div>
                        <div class="to-like">
                            <a href="">
                                <i class="far fa-bookmark"></i>
                            </a>
                        </div>
                    </div>
                    <div class="book-content d-flex flex-column">
                        <div class="book-content-head">
                            <div class="icons d-flex justify-content-between">
                                <div class="book-name">Toefl Grammer</div>
                                <div class="watch-page d-flex justify-content-center align-items-center">
                                    <i class="fas fa-eye"></i>
                                    <span>15</span>
                                </div>
                            </div>
                        </div>
                        <div class="book-content-body">
                            <div class="book-author"><span>Muəllif : </span> Jr Comerun</div>
                            <div class="book-language"><span>Dil : </span> Azərbaycan</div>
                            <div class="book-Category"><span>Kateqoriya : </span> Dərslik</div>
                            <div class="book-Category"><span>Alt Kateqoriya : </span> Digər</div>
                        </div>
                        <div class="book-content-footer d-flex justify-content-between align-items-center">
                            <div class="location">Bakı</div>
                            <div class="create-time d-flex justify-content-end align-items-center">
                                Yaranma Tarixi : 15.02.2021
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-4">
                <div class="book-contact">
                    <div class="contact-head d-flex justify-content-center">
                        <div class="book-price">5 Azn</div>
                    </div>
                    <div class="contact-body d-flex justify-content-center align-items-center">
                        <div class="person-img">
                            <img src="~/src/img/logo/user.png" alt="" />
                        </div>
                        <div class="person-name">Elgun Maqsudzade</div>
                    </div>
                    <div class="contact-message">
                        <form action=""
                              class="d-flex justify-content-center align-items-center flex-column">
                            <div class="form-group w-100">
                                <textarea class="form-control"
                                          id="exampleFormControlTextarea1"
                                          rows="7"
                                          placeholder="Mesaj ..."></textarea>
                            </div>
                            <div class="form-group">
                                <button>Göndər</button>
                            </div>
                        </form>
                    </div>
                    <div class="contact-footer text-center">
                        <div class="whatsapp">
                            <a href="" class="d-flex align-items-center justify-content-center">
                                <i class="fab fa-whatsapp"></i>
                                <span> Whatsapdan yaz </span>
                            </a>
                        </div>
                        <div class="mobil">
                            <i class="fas fa-phone"></i>
                            <span> +994558835613 </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- *-*-*-*-*-*-*-*-*      Most Viewed End      *-*-*-*-*-*-*-*-* -->
